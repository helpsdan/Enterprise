@model Fiap06.Web.MVC.Models.Bebida

@{
    ViewBag.Title = "Atualizar";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<h2>Atualizar</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(b => b.BebidaId)
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextAreaFor(b => b.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Preco)
        @Html.TextAreaFor(b => b.Preco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(b => b.Destilado)
        @Html.LabelFor(b => b.Destilado)
    </div>
    <input type="submit" value="Editar" class="btn btn-primary" />
}