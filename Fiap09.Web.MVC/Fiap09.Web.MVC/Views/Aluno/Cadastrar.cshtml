@model Fiap09.Web.MVC.ViewModel.AlunoViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(t => t.Aluno.Nome)
        @Html.TextBoxFor(t => t.Aluno.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Aluno.Turma)
        @Html.DropDownListFor(t => t.Aluno.TurmaId,
            Model.Turmas as SelectList, "Selecione",
            new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}